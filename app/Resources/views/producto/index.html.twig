{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productos list</h1>

    <table>
        <thead>
            <tr>
                <th>Idproducto</th>
                <th>Productonombre</th>
                <th>Productoprecio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td><a href="{{ path('producto_show', { 'idproducto': producto.idproducto }) }}">{{ producto.idproducto }}</a></td>
                <td>{{ producto.productonombre }}</td>
                <td>{{ producto.productoprecio }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('producto_show', { 'idproducto': producto.idproducto }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('producto_edit', { 'idproducto': producto.idproducto }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('producto_new') }}">Create a new producto</a>
        </li>
    </ul>
{% endblock %}
